{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "16 || 18"
  },
  "scripts": {
    "build": "backstage-cli repo build --all",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli test",
    "test:all": "backstage-cli test --all",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "create-plugin": "backstage-cli create-plugin --scope kphoen --no-private",
    "remove-plugin": "backstage-cli remove-plugin",
    "version": "changeset version && yarn install && (git commit -am 'Update internal dependencies' || true)",
    "release": "changeset publish",
    "prepare": "husky install",
    "postinstall": "husky install || true"
  },
  "workspaces": {
    "packages": [
      "plugins/**"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.18.0"
  },
  "devDependencies": {
    "@backstage/cli": "^0.22.3",
    "@spotify/prettier-config": "^12.0.0",
    "@types/webpack": "^5.28.0",
    "concurrently": "^7.0.0",
    "eslint-plugin-notice": "^0.9.10",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "typescript": "~4.5.4"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
